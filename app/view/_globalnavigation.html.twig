<div class="slds-context-bar">
    <div class="slds-context-bar__primary">
        <div class="slds-context-bar__item slds-context-bar__dropdown-trigger slds-dropdown-trigger slds-dropdown-trigger_click slds-no-hover">

            {% if modules.DASHBOARD %}
            <div class="slds-context-bar__icon-action">
                <button class="slds-button slds-icon-waffle_container slds-context-bar__button slds-app-launcher" title="Toutes les applications" id="btlauncher">
                    <span class="slds-icon-waffle">
                        <span class="slds-r1"></span>
                        <span class="slds-r2"></span>
                        <span class="slds-r3"></span>
                        <span class="slds-r4"></span>
                        <span class="slds-r5"></span>
                        <span class="slds-r6"></span>
                        <span class="slds-r7"></span>
                        <span class="slds-r8"></span>
                        <span class="slds-r9"></span>
                    </span>
                    <span class="slds-assistive-text">Ouvrez le lanceur d'applications</span>
                </button>
            </div>
            {% endif %}

            <span class="slds-context-bar__label-action slds-context-bar__app-name">
                <span class="slds-truncate" title="E-GESCOM">E-GESCOM</span>
            </span>
        </div>
    </div>
    <nav class="slds-context-bar__secondary slds-show_medium" role="navigation">
        <ul class="slds-grid">

            {% if modules.DASHBOARD %}
            <li class="slds-context-bar__item {% if "dashboard" in url %} slds-is-active {% endif %}">
                <a href="/app/dashboard" class="slds-context-bar__label-action" title="Dashboard">
                    {% if "dashboard" in url %}
                    <span class="slds-assistive-text">Current Page:</span>
                    {% endif %}
                    <span class="slds-truncate" title="Menu Dashboard">Dashboard</span>
                </a>
            </li>
            {% endif %}



            {% if modules.INFORMATIQUE  %}
                <li class="slds-context-bar__item {% if "informatique" in url %} slds-is-active {% endif %}">
                    <a href="/app/informatique" class="slds-context-bar__label-action" title="Informatique">
                        {% if "informatique" in url %}
                            <span class="slds-assistive-text">Current Page:</span>
                        {% endif %}
                        <span class="slds-truncate" title="Menu Informatique">Informatique</span>
                    </a>
                </li>
            {% endif %}


        </ul>
    </nav>
</div>
